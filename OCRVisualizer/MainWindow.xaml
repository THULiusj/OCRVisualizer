<Window x:Class="OCRVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCRVisualizer"
        mc:Ignorable="d"
        Title="OCR Visualizer" Height="681.5" Width="1076.143">
    <Grid x:Name="gridCanvas">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,0,0,60">
            <Canvas x:Name="canvasImg">
                <Image x:Name="imgInvoice" Stretch="Fill"/>
                <Canvas x:Name="canvas"/>
            </Canvas>
        </ScrollViewer>
        <StackPanel Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Content="Browse" Width="75" Click="ButtonBrowse_Click" HorizontalAlignment="Left" Margin="0,0,0,5" VerticalAlignment="Top"/>
            <Button Content="Visibilty" Width="75" Click="ButtonVisiblity_Click" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Height="60">
            <TextBlock Text="Output:"/>
            <TextBox x:Name="txtOcrOutput" Height="46" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
